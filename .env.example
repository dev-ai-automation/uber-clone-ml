# Environment Configuration
ENVIRONMENT=development
DEBUG=false

# Application Configuration
APP_PORT=8000

# Database Configuration (REQUIRED - No defaults for security)
POSTGRES_DB=uber_db
POSTGRES_USER=uber_user
POSTGRES_PASSWORD=change_this_secure_password_123!
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# Redis Configuration (REQUIRED - No defaults for security)
REDIS_PASSWORD=change_this_redis_password_456!
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0

# ML Model Configuration
ML_MODEL_PATH=./models
DEMAND_MODEL_NAME=demand_predictor.pth
SUPPLY_MODEL_NAME=supply_predictor.pth
MATCHING_MODEL_NAME=matching_model.pth

# Geolocation Settings
DEFAULT_SEARCH_RADIUS_KM=5.0
MAX_SEARCH_RADIUS_KM=20.0

# Pricing Configuration
BASE_FARE=2.50
COST_PER_KM=1.20
COST_PER_MINUTE=0.25
SURGE_MULTIPLIER_MAX=3.0

# Security Settings (REQUIRED - Generate secure values)
SECRET_KEY=generate_a_secure_32_character_secret_key_here_123456789
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
RATE_LIMIT_PER_MINUTE=100

# CORS and Security Headers
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Flower Monitoring (Change default credentials!)
FLOWER_USER=admin
FLOWER_PASSWORD=change_this_flower_password_789!
FLOWER_PORT=5555

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Celery Configuration (Will use Redis URL automatically)
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# ML Training Settings
BATCH_SIZE=32
LEARNING_RATE=0.001
EPOCHS=100
DEVICE=cpu
